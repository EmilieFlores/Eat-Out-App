<!DOCTYPE html>
<head>
    <title>Eat-Out-App</title>
    <!--STYLESHEET LINK-->
    <link rel ="stylesheet" href="/styles.css">
    <!--GOOGLE FONT-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
    <!--ICONS-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>
<body>
    <section class = 'tracker-container'>
        <h2>Eat Out Tracker 2023</h2>
        <section class="trackerInfo">
            <form action ="/" method="POST" class="tracker-header">
                <input type="text" name="title" placeholder="Restaurant">
                <textarea rows="6" cols="45" name="date" placeholder="Date"></textarea>
                <button type="submit"><span class="fas fa-plus"></span>Add Restaurant </button>
            </form>
            <ul class="tracker-list">
                <% food.forEach(food => { %>
                <li class="tracker-list-item">
                    <div class="tracker-list-item-title">
                        <%= food.title %> <%= food.date %>
                    </div>
                    <a href="/edit/<%= food._id %>" class="edit">
                        <span class="fas fa-edit"></span>
                    </a>
                    <a href="/edit/remove/<%= food._id %>" class="remove">
                        <span class="fas fa-trash"></span>
                    </a>
                </li>
               <% }) %>
            </ul>
        </section>
    </section>
</body>





